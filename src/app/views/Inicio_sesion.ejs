<%- include('../includes/head.ejs') %>
  
<title>Inicio de Sesión</title>


  <body class="bg-dark">
    <section>
      <div class="row g-0"> 
        <div class="col-lg-7 d-none d-lg-block">
          <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/resources/Carrusel_Inicio_Sesión_1.jpg" width="1000px" height="1000px">
              </div>
              <div class="carousel-item">
                <img src="/resources/Carrusel_Inicio_Sesión_2.jpg" width="1000px" height="1000px">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
        <div class="col-lg-5 d-flex flex-column align-items-end min-vh-100 text-center">
          <div class="px-lg-5 pt-lg-4 pb-lg-3 p-4 w-100 mb-5">
            <img src="/resources/Logo_Clownvados.ico" class="img-fluid" width="150px" height="150px">
          </div>
          <div class="px-lg-5 py-lg-4 p-4 w-100 align-self-center">
            <h1 class="font-weight-bold mb-5">Bienvenidos</h1>


            <form class="mb-5" action="/Inicio_sesion" method="POST">
              <div class="mb-4 login-form">
                <label for="Inicio" class="form-label font-weight-bold">Usuario<span class="text-danger">*</span></label>
                <input type="text" name="usuario" class="form-control bg-dark-x border-0" placeholder="Ingresa tu Usuario" id="usuario" aria-describedby="emailHelp" required>
              </div>
              <div class="mb-5">
                <label for="Contrasena" class="form-label font-weight-bold">Contraseña<span class="text-danger">*</span></label>
                <input type="password" name="contrasena" class="form-control bg-dark-x border-0 mb-4" placeholder="Ingresa tu contraseña" id="contrasena" required>
              </div>
              <button class="btn btn-dark width-100" type="submit" value="Login">Inicia Sesión</button>
              </form>

              
            <p class="font-weight-bold text-center text-muted">O inicia sesión sin cuenta</p>
            <div class="d-flex justify-content-around">
              <button type="submit" class="btn btn-outline-dark flex-grow-1 margin-right"><a href="/" class="form-check-label text-muted text-decoration-none">Ir al Home</a></button>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <%- include('../includes/footer.ejs') %>